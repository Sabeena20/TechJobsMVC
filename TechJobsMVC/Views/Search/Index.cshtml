<div class="container body-content">

    <h1>@ViewBag.title</h1>

    <form action="/search/results" method="post">
        <h2>Search by:</h2>

        <p>
            @foreach (var column in ViewBag.columns)
            {
                <span>
                    <input type="radio" name="searchType" id="@column.Key" value="@column.Key" checked="@column.Key == 'all'" />
                    <label for="@column.Key">@column.Value</label>
                </span>
            }

        </p>

        <p>
            <label for="searchTerm">Keyword:</label>
            <input type="text" name="searchTerm" id="searchTerm" />
        </p>

        <input type="submit" value="Search" />
    </form>

    <hr />

    <div class="container body-content">

        <h1>@ViewBag.title</h1>


        @*//TODO #1: Use a loop to display job results in a table.*@
        <table class="job-listing">
            @if (ViewBag.Jobs != null)
            {
            @foreach (var jobs in ViewBag.Jobs)
            {


                <tr> <td><b>ID</b></td><td>@jobs.Id</td></tr>
                <tr> <td><b>Name</b></td><td>@jobs.Name</td></tr>
                <tr><td><b>Employer</b></td><td>@jobs.Employer.Value</td></tr>
                <tr><td><b>Location</b></td><td>@jobs.Location.Value</td></tr>
                <tr><td><b>Position Type</b></td><td>@jobs.PositionType.Value</td></tr>
                <tr><td><b>Skill</b></td><td>@jobs.CoreCompetency.Value</td></tr>
                <tr><td></td><td></td></tr>
            }
            }
        </table>


    </div>
</div>